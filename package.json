{
  "name": "quicktab",
  "version": "0.0.1",
  "description": "A simple tab",
  "main": "index.js",
  "scripts": {
    "css:lint": "stylelint --config stylelint.config.mjs src/**/*.scss --cache --cache-location .cache/.stylelintcache",
    "css:compile": "sass --style expanded --source-map --embed-sources --no-error-css src/:dist/css/",
    "css:prefix": "postcss --config postcss.config.mjs --replace \"dist/css/*.css\"  \"!dist/css/*.min.css\"",
    "css:min": "cleancss -O1  --format breakWith=lf --with-rebase  --source-map --source-map-inline-sources --output dist/css/ --batch --batch-suffix \".min\" \"dist/css/*.css\" \"!dist/css/*.min.css\"",
    "css:banner": "node build/banner-builder.mjs dist/css/*.css",
    "css:fix": "stylelint --config stylelint.config.mjs src/**/*.scss --fix",
    "css": "run-s format:lint \"css:!(fix)\"",
    "format:lint": "prettier --config prettier.config.mjs  src/**/*.{js,scss} --check --cache --cache-location .cache/.prettiercache",
    "format:fix": "prettier --config prettier.config.mjs src/**/*.{js,scss} --write",
    "js:lint": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs src/**/*.js --cache --cache-location .cache/.eslintcache --report-unused-disable-directives",
    "js:fix": "cross-env ESLINT_USE_FLAT_CONFIG=true eslint --config eslint.config.mjs src/**/*.js  --fix",
    "js:compile": "rollup --config rollup.config.mjs",
    "js": "run-s format:lint \"js:!(fix)\"",
    "watch:css": "nodemon --watch src/**/*.scss --ext scss --exec \"run-s css\"",
    "watch:js": "nodemon --watch src/**/*.js --ext js --exec \"run-s js\"",
    "watch": "run-p watch-*",
    "lint": "run-p --aggregate-output  -c *:lint",
    "fix": "run-p --aggregate-output  -c *:fix",
    "clean": "rimraf dist",
    "query:build": "node build/query-build.mjs",
    "build": "run-s lint clean css js",
    "prepare": "husky install",
    "commitlint": "commitlint --config commitlint.config.mjs -e -V"
  },
  "repository": {
    "type": "git",
    "url": "https://gitee.com/ajiho/quicktab.git"
  },
  "keywords": [
    "tab"
  ],
  "homepage": "https://gitee.com/ajiho/quicktab",
  "author": "ajiho",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@eslint/js": "^8.55.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.16",
    "chalk": "^5.3.0",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^7.0.3",
    "del": "^7.1.0",
    "eslint": "^8.55.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "globals": "^13.24.0",
    "husky": "^8.0.0",
    "node-css-mqpacker": "^9.0.0",
    "nodemon": "^3.0.2",
    "npm-run-all2": "^6.1.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.0",
    "rollup-plugin-strip-banner": "^3.1.0",
    "sass": "^1.69.5",
    "stylelint": "^16.0.2",
    "stylelint-config-recess-order": "^4.4.0",
    "stylelint-config-standard-scss": "^12.0.0"
  },
  "dependencies": {
    "@floating-ui/dom": "^1.5.3",
    "jquery": "^3.7.1"
  }
}
